{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug LoginWalletSystem",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/LoginWalletSystem",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "windows": {
        "program": "${workspaceFolder}/src/LoginWalletSystem.exe",
        "MIMode": "gdb",
        "miDebuggerPath": "gdb.exe"
      },
      "linux": {
        "program": "${workspaceFolder}/src/LoginWalletSystem",
        "MIMode": "gdb",
        "miDebuggerPath": "gdb"
      },
      "osx": {
        "program": "${workspaceFolder}/src/LoginWalletSystem",
        "MIMode": "lldb",
        "miDebuggerPath": "lldb"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: g++ build project"
    }
  ]
}